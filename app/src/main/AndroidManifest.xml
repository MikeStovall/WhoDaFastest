<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mikestovall.whodafastest" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/game_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.mikestovall.whodafastest.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mikestovall.whodafastest.StatsActivity"
            android:label="@string/title_activity_stats" >
        </activity>
        <activity
            android:name="com.mikestovall.whodafastest.GameActivity"
            android:label="@string/title_activity_game_show" />
    </application>

</manifest>
